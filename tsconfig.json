{
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Node 14",
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ESNext"],
    "module": "CommonJS",

    "rootDir": "./src",
    "outDir": "./lib",
    "declarationDir": "./lib/typings",
    "declaration": true,
    "sourceMap": true,

    "strict": true,
    "removeComments": true,
    "moduleResolution": "Node",
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "esModuleInterop": true
  },

  "exclude": ["node_modules", "private", "lib"]
}
